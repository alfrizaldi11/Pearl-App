<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/photo_treatment_schedule"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_treatment_schedule"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notoserifbold"
                android:textColor="@color/darkPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/keterangan_treatment_schedule"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notoseriflight"
                android:textColor="@color/darkPrimary"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <TextView
                    android:id="@+id/waktu_treatment_schedule"
                    android:layout_width="25dp"
                    android:layout_height="17dp"
                    android:fontFamily="@font/notoseriflight"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkPrimary"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:fontFamily="@font/notoseriflight"
                    android:text="Menit"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:fontFamily="@font/notoserifthin"
                    android:text="RP."
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkPrimary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/detail_harga_schedule"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/notoserifbold"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkPrimary"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>