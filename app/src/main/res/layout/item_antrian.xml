<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp">


                <ImageView
                    android:id="@+id/photo_customer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_profile" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/username_antrian"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/notoserifbold"
                android:textColor="@color/darkPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/status_antrian"
                android:layout_width="90dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/notoseriflight"
                android:textColor="@color/darkPrimary"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/total_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/notoserifbold"
                android:textColor="@color/darkPrimary"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Menit"
                android:textAlignment="center"
                android:fontFamily="@font/notoseriflight"
                android:textColor="@color/darkPrimary"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_antrian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/notoserifthin"
                android:textAlignment="center"
                android:textColor="@color/darkPrimary"
                android:textSize="35sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>